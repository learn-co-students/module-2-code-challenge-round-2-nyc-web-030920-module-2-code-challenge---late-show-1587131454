<h1>Create an Appearance</h1>

<% if flash[:errors]%>
<% flash[:errors].each do |errors| %>
    <p> <%= errors %> </p>
    <% end %>
    <% end %>
    


<%=form_for @appearance do |f| %>
    <%=f.label :guest_id %>
    <%=f.collection_select :guest_id, Guest.all, :id, :name %>
    <%=f.label :episode_id %>
    <%=f.collection_select :episode_id, Episode.all, :id, :date %>
    <%=f.label :numeric_rating %>
    <%=f.number_field :numeric_rating%>
    <%= f.submit %>

    <% end %>