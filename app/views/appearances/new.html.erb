<% if flash[:errors] %>
<%= flash[:errors].each do |error| %>
    <%= error %>
    <%end %>
    <%end %>
<%= form_for @appearance do |f| %>
    <%= collection_select(:appearance, :guest_id, Guest.all, :id, :name) %>
    <%= collection_select(:appearance, :episode_id, Episode.all, :id, :date) %>
    <%= f.label 'Rating' %>
    <%= f.number_field :rating %>
    <%= f.submit %>
    <% end %>